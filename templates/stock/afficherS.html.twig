{% extends 'base-back.html.twig' %}

{% block content %}

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <!--<h4 class="mb-0">Responsive Table</h4>-->

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Stock</a></li>
                        <li class="breadcrumb-item active">Afficher</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->

    <!-- start row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Tableau des Stock</h4>
                    <p class="card-title-desc"></p>

                    <div class="table-rep-plugin">
                        <div class="table-responsive mb-0" data-pattern="priority-columns">
                            <table id="tech-companies-1" class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Emplacement</th>
                                    <th>Reference</th>
                                    <th>NbreProdEnstock</th>
                                    <th style="width: 120px;">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for stock in stocks %}
                                    <td>{{ stock.id }}</td>
                                    <td>{{ stock.emplacement }}</td>
                                    <td>{{ stock.reference }}</td>
                                    <td>{{ stock.nbreProdEnstock }}</td>
                                  
                                    <td>
                                        <a href="{{ path('app_stock_edit',{'id':stock.id}) }}" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Modifier" data-original-title="Edit"><i class="mdi mdi-pencil font-size-18"></i></a>
                                        {{ include('stock/_delete_form.html.twig') }}
                                        <a href="{{ path('app_stock_new',{'id':stock.id}) }}" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Ajouter" data-original-title="Ajouter"><i class="mdi mdi-pencil font-size-18"></i></a>

                                    </td>
                                </tr {% endfor %}>
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- end row -->

    <script>
        $('#tech-companies-1').DataTable();
    </script>

{% endblock %}
