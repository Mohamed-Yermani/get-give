{% extends 'base-back.html.twig' %}



{% block content %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <!--<h4 class="mb-0">Responsive Table</h4>-->

            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <h4 class="card-title">Modifier Stock</h4>
                    <p class="card-title-desc"></p>

                    

                    <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.emplacement) }}</label>
                        <div class="col-md-10">
                            <input class="form-control" {{ form_widget(form.emplacement) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.reference) }}</label>
                        <div class="col-md-10">
                            <input class="form-control" {{ form_widget(form.reference) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.nbreProdEnstock) }}</label>
                        <div class="col-md-10">
                            <input class="form-control" {{ form_widget(form.nbreProdEnstock) }}
                        </div>
                    </div>


                    <button type="submit" class="btn">Modifier</button>


                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>


{% endblock %}



